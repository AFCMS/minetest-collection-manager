{
  "$schema": "http://json-schema.org/draft-07/schema",
  "definitions": {
    "package": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "git"
          ]
        },
        "url": {
          "type": "string",
          "minLength": 1,
          "description": "URL of the Git repository"
        },
        "folder_name": {
          "type": "string",
          "minLength": 1,
          "description": "Name of the folder where the mod will be stored"
        },
        "git_remote_branch": {
          "type": "string",
          "minLength": 1,
          "description": "Name of the branch to pull from (auto determined in most cases by default)"
        }
      },
      "required": [
        "type",
        "url"
      ],
      "examples": [
        {
          "type": "git",
          "url": "https://github.com/minetest-palamod/palamod"
        }
      ]
    },
    "package_array": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/package"
      },
      "uniqueItems": true
    }
  },
  "description": "Config schema for Minetest Collection Manager",
  "type": "object",
  "properties": {
    "content": {
      "description": "Definition of required packages",
      "type": "object",
      "properties": {
        "mods": {
          "$ref": "#/definitions/package_array"
        },
        "games": {
          "$ref": "#/definitions/package_array"
        }
      },
      "required": [
        "mods",
        "games"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "content"
  ]
}